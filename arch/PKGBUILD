pkgname=python-protonvpn-nm-lib
pkgver=3.7.0
pkgrel=6
pkgdesc="Official ProtonVPN NetworkManager library."
arch=("any")
url="https://github.com/ProtonVPN"
license=("GPL3")
groups=("ProtonVPN")
depends=("python-proton-client" "networkmanager" "networkmanager-openvpn" "openvpn" "libnm" "dbus" "libsecret" "python-keyring" "python-jinja" "python-distro" "python-dbus" "python-systemd" "xdg-utils" "python-gobject")
makedepends=("python-setuptools")
conflicts=("protonvpn-cli<3.11.0" "protonvpn-cli<1.7.0")
source=("$pkgname.tar.gz")
sha256sums=(.)
validpgpkeys=("A884 41BD 4864 F95B EE08  E63A 71EB 4740 1994 0E11")

build() {
    cd "$pkgname"
    python setup.py build
}

package() {
    cd "$pkgname"
    python setup.py install --root="$pkgdir" --optimize=1
}
